require 'rake'

begin
  require "jeweler"
  Jeweler::Tasks.new do |gem|
    gem.name = "dioxide_rails"
    gem.summary = "Ruby On Rails implementation of the Dioxide RPC framework"
    gem.email = "admin@developertown.com"
    gem.authors = ["Jason Vasquez"]
    gem.files = Dir["{lib}/**/*", "{app}/**/*", "{config}/**/*"]
  end
  Jeweler::GemcutterTasks.new
rescue
  puts "Jeweler or dependency not available."
end

